{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "strict": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
